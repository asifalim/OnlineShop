@using OnlineShop.Models;
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">User List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fa-solid fa-plus"></i>&nbsp;New User</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>Name</th>
            <th>UserName</th>
            <th>Status</th>
            <th></th> 
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.UserName</td>
                @if (item.LockoutEnd != null && item.LockoutEnd > DateTime.Now)
                {
                    <td>Inactive</td>
                    <td></td>
                    <td>
                        <div class="btn-group">
                        <a asp-action="Active" class="btn btn-primary" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </td>
                }
                else
                {
                    <td>Active</td>
                    <td>
                        <partial name="_PartialButton" model="@item.Id" />
                    </td>
                }
                
            </tr>
        }
    </table>
</div>


@section scripts {
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.14.0/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var save = '@TempData["save"]'
            if (save != null) {
                alertify.success(save);
            }
        })
    </script>
}

